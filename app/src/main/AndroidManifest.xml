<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.na_russia.app.justfortoday"
    android:versionCode="2"
    android:versionName="1.1" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.na_russia.app.justfortoday.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.na_russia.app.justfortoday.PrefsActivity"
            android:label="@string/action_settings" >
        </activity>
        <activity
            android:name="org.na_russia.app.justfortoday.AboutActivity"
            android:label="@string/about"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
    </application>

</manifest>